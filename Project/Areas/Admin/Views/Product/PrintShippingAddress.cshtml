@using Core.Services.Interfaces;
@using Datalayer.Entities;

@model Order

@inject IProductService _productService;

@{
    Layout = null;
}
<html>
<head>
    <link href="~/css/printstyle.css" rel="stylesheet" />
</head>
<body style="width:94%; margin-left:3%; float:left; font-size:16px;">
    <div style="width:100%;border:2px solid black;">
        <div class="PrintSection">
            <div class="Logo"><img src="~/assets/logo.png" /></div>
            <div class="SenderSection">
                <div class="SenderHeader">فرستنده: قهوه نیش</div>
                <div class="SenderDetails">
                    <span>آدرس: تهران - خیابان قائم مقام فراهانی، میدان شعاع، نبش خیابان خدری پلاک 1 واحد 8</span>
                    <span>کد پستی: 1585895354</span>
                    <span style="float:right; width:200px;">
                        شماره تماس: 02188327813
                    </span>
                    <span style="float:right;  width:200px;">
                        پشتیبانی: 09192008545
                    </span>
                    <span style="text-align:left">www.nishcoffee.ir</span>
                    <div class="clear"></div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="PrintSection">
            <div class="SenderHeader">گیرنده: @Model.Name</div>
            <div class="SenderDetails">
                <span>آدرس: @_productService.GetCityById(_productService.GetStateOfCity(Model.CityId)).Name، @Model.City.Name، @Model.Address</span>
                <span>کد پستی: @Model.PostalCode</span>
                <span>شماره تماس: @Model.PhoneNumber</span>
            </div>
        </div>

    </div>

</body>
</html>




