@using Datalayer.Entities
@model Product

<form id="SimplePriceArea" class="form-horizontal MainForm" onsubmit="SimplePriceAreaSubmit(event)" asp-controller="Product" asp-action="EditSimplePrice">
    <div class="SimplePriceArea" style="margin-top:20px;">
        <input type="hidden" name="ProductId" value="@Model.Id" />
        <div class="form-group">
            <div class="col-lg-3">
                <label>قیمت</label>
            </div>
            <div class="col-lg-9">
                <input type="number" class="form-control" id="BasePrice" name="BasePrice" value="@Model.BasePrice" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-3">
                <label>قیمت با تخفیف (اختیاری)</label>
            </div>
            <div class="col-lg-9">
                <input type="number" class="form-control" id="BaseSalePrice" name="BaseSalePrice" value="@Model.BaseSalePrice" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-3">
                <label>تعداد در انبار</label>
            </div>
            <div class="col-lg-9">
                <input type="number" class="form-control" id="BaseStockNumber" name="BaseStockNumber" value="@Model.BaseStockNumber" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12 align-content-end">
                <button class="btn btn-primary" style="width:145px;display: block; float:left" type="submit"><i class="fa fa-check"></i>&nbsp;ذخیره قیمت</button>
            </div>
        </div>

    </div>
</form>


